
@model List<AppTenis.Models.Entities.Producto>

@{
    ViewBag.Title = "Productos Comprados";
    Layout = "~/Views/Shared/Pagina_Usuario.cshtml";
}

<h2>Productos Comprados</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <!-- Agrega más columnas según sea necesario -->
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.id</td>
                    <td>@producto.nombre</td>
                    <td>@producto.descripcion</td>
                    <td>@producto.precio</td>
                    <!-- Agrega más columnas según sea necesario -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay productos comprados.</p>
}

<a href="@Url.Action("Catalogo", "Productos")" class="btn btn-primary">Volver al Inicio</a>


