@model IEnumerable<AppTenis.Models.Entities.Producto>

@{
    ViewBag.Title = "Catalogo";
    Layout = "~/Views/Shared/Pagina_Usuario.cshtml";
}<

<h2>Comprador</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.foto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                <img src="~/imag/@item.foto" width="100" height="200">
            </td>
            <td>
                @Html.ActionLink("Detalles", "Detalles_Comprador", new { id = item.id })

            </td>
        </tr>
    }

</table>


<a href="@Url.Action("Index.aspx", "Index.aspx")" class="btn btn-danger">Cerrar Sesion</a>


